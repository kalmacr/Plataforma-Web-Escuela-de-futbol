@* ForgotPassword.cshtml *@

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card p-4 shadow-sm" style="width: 380px;">
        <h2 class="text-center mb-4">Recuperar Contraseña</h2>

        <form>
            <div class="mb-3">
                <label class="form-label">Correo registrado</label>
                <input type="email" class="form-control" placeholder="usuario@escuelita.com">
            </div>

            <button class="btn btn-success w-100">Enviar enlace de recuperación</button>
        </form>

        <p class="mt-3 text-muted text-center">
            Recibirás un correo con instrucciones para restablecer tu contraseña.
        </p>
    </div>
</div>
